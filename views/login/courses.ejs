<div class="container">
    <h1>登録</h1>
    <% if (locals.errors) { %>
        <ul class="alert">
            <%   for (var i = 0; i < errors.length; i++) { %>
                <li><%= errors[i]%></li>
            <%   } %>
        </ul>
    <% } %>
    <form method="POST" action="/">
        <div>
            <label for="name">ログインID：</label>
            <input type="text" id="name" name="name" value="<%= locals.name ? name : ""%>"/>
        </div>
        <div>
            <label for="location">表示名：</label>
            <input type="text" id="location" name="location" value="<%= locals.location ? location : ""%>"/>
        </div>
        <div>
            <label for="tel">パスワード：</label>
            <input type="text" id="tel" name="tel" value="<%= locals.tel ? tel : ""%>" />
        </div>
        <div>
            <input type="submit" value="確認" />
        </div>
    </form>
</div>
